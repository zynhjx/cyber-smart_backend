<header>
  <div class="left">
    <div class="logo">
      <a href="/dashboard" class="nav <%= activePage === 'dashboard' ? 'active' : '' %>">CyberSmart</a>
    </div>
    <nav class="main-nav">
      <a href="/training" class="navs <%= activePage === 'training' ? 'active' : '' %>">Training</a>
      <a href="/challenges" class="navs <%= activePage === 'challenges' ? 'active' : '' %>">Challenges</a>
